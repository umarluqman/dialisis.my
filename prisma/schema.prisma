// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model DialysisCenter {
  id                 String   @id @default(cuid())
  slug               String   @unique @default("")
  dialysisCenterName String   @default("")
  sector             String   @default("")
  drInCharge         String   @default("")
  drInChargeTel      String   @default("")
  address            String   @default("")
  addressWithUnit    String   @default("")
  tel                String   @default("")
  fax                String?
  panelNephrologist  String?
  centreManager      String?
  centreCoordinator  String?
  email              String?
  hepatitisBay       String?
  longitude          Float?
  latitude           Float?
  phoneNumber        String   @default("")
  website            String?
  title              String   @default("")
  units              String   @default("")
  description        String?
  benefits          String?
  photos            String?
  videos            String?
  state             State    @relation(fields: [stateId], references: [id])
  stateId           String
  images            CenterImage[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  town              String   @default("")
  featured          Boolean  @default(false)

  @@index([sector])
  @@index([title])
  @@index([town])
  @@index([units])
  @@index([drInCharge])
  @@index([addressWithUnit])
  @@index([address])
  @@index([dialysisCenterName])
  @@index([slug])
}

model State {
  id              String           @id @default(cuid())
  name            String           @unique
  dialysisCenters DialysisCenter[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model CenterImage {
  id               String         @id @default(cuid())
  url              String         // Public URL of the image
  s3Key            String         // S3 object key for deletion
  altText          String         @default("")
  description      String?
  displayOrder     Int            @default(0)
  isActive         Boolean        @default(true)
  dialysisCenter   DialysisCenter @relation(fields: [dialysisCenterId], references: [id], onDelete: Cascade)
  dialysisCenterId String
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([dialysisCenterId])
  @@index([displayOrder])
  @@index([isActive])
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  ipAddress String   // For rate limiting
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([ipAddress])
}
