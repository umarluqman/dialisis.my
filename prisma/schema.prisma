// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("business_owner") // "admin", "business_owner", "viewer"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relationship with BusinessOwner
  businessOwner BusinessOwner?
  
  @@index([email])
}

model BusinessOwner {
  id              String           @id @default(cuid())
  userId          String           @unique
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Business details
  businessName    String?
  phoneNumber     String?
  address         String?
  
  // Relationship with DialysisCenters - one owner can have multiple centers
  dialysisCenters DialysisCenter[]
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  @@index([userId])
}

model DialysisCenter {
  id                 String   @id @default(cuid())
  dialysisCenterName String   @default("")
  sector             String   @default("")
  drInCharge         String   @default("")
  address            String   @default("")
  addressWithUnit    String   @default("")
  tel                String   @default("")
  fax                String?
  panelNephrologist  String?
  centreManager      String?
  centreCoordinator  String?
  email              String?
  hepatitisBay       String?
  longitude          Float?
  latitude           Float?
  phoneNumber        String   @default("")
  website            String?
  title              String   @default("")
  units              String   @default("") // Will store as comma-separated string e.g. "HD Unit,CAPD Unit"
  state              State    @relation(fields: [stateId], references: [id])
  stateId            String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  town               String   @default("")
  
  // Relationship with BusinessOwner
  ownerId            String?
  owner              BusinessOwner? @relation(fields: [ownerId], references: [id], onDelete: SetNull)

  @@index([sector])
  @@index([title])
  @@index([town])
  @@index([units])
  @@index([drInCharge])
  @@index([ownerId])
}

model State {
  id              String           @id @default(cuid())
  name            String           @unique
  dialysisCenters DialysisCenter[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

// NextAuth.js models for session management
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
