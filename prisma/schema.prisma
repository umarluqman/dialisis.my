// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DialysisCenter {
  id                 String   @id @default(cuid())
  slug               String   @unique @default("")
  dialysisCenterName String   @default("")
  sector             String   @default("")
  drInCharge         String   @default("")
  drInChargeTel      String   @default("")
  address            String   @default("")
  addressWithUnit    String   @default("")
  tel                String   @default("")
  fax                String?
  panelNephrologist  String?
  centreManager      String?
  centreCoordinator  String?
  email              String?
  hepatitisBay       String?
  longitude          Float?
  latitude           Float?
  phoneNumber        String   @default("")
  website            String?
  title              String   @default("")
  units              String   @default("")
  description        String?
  benefits          String?
  photos            String?
  videos            String?
  state             State    @relation(fields: [stateId], references: [id])
  stateId           String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  town              String   @default("")
  featured          Boolean  @default(false)
  
  // User relationship
  users             UserDialysisCenter[]

  @@index([sector])
  @@index([title])
  @@index([town])
  @@index([units])
  @@index([drInCharge])
  @@index([addressWithUnit])
  @@index([address])
  @@index([dialysisCenterName])
  @@index([slug])
}

model State {
  id              String           @id @default(cuid())
  name            String           @unique
  dialysisCenters DialysisCenter[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  ipAddress String   // For rate limiting
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([ipAddress])
}

// Authentication Models
model User {
  id              String   @id @default(cuid())
  email           String   @unique
  emailVerified   DateTime?
  name            String?
  password        String?  // For email/password auth
  image           String?
  role            String   @default("USER") // USER, ADMIN
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  accounts        Account[]
  sessions        Session[]
  dialysisCenters UserDialysisCenter[]

  @@index([email])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Junction table for many-to-many relationship
model UserDialysisCenter {
  id               String         @id @default(cuid())
  userId           String
  dialysisCenterId String
  role             String         @default("OWNER") // OWNER, MANAGER, VIEWER
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  dialysisCenter   DialysisCenter @relation(fields: [dialysisCenterId], references: [id], onDelete: Cascade)
  
  @@unique([userId, dialysisCenterId])
  @@index([userId])
  @@index([dialysisCenterId])
}
