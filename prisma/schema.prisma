// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DialysisCenter {
  id                 String   @id @default(cuid())
  slug               String   @unique @default("")
  dialysisCenterName String   @default("")
  sector             String   @default("")
  drInCharge         String   @default("")
  address            String   @default("")
  addressWithUnit    String   @default("")
  tel                String   @default("")
  fax                String?
  panelNephrologist  String?
  centreManager      String?
  centreCoordinator  String?
  email              String?
  hepatitisBay       String?
  longitude          Float?
  latitude           Float?
  phoneNumber        String   @default("")
  website            String?
  title              String   @default("")
  units              String   @default("")
  description        String?
  benefits          String?
  photos            String?
  videos            String?
  state             State    @relation(fields: [stateId], references: [id])
  stateId           String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  town              String   @default("")

  @@index([sector])
  @@index([title])
  @@index([town])
  @@index([units])
  @@index([drInCharge])
  @@index([addressWithUnit])
  @@index([address])
  @@index([dialysisCenterName])
  @@index([slug])
}

model State {
  id              String           @id @default(cuid())
  name            String           @unique
  dialysisCenters DialysisCenter[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}
